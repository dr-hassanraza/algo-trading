# API Configuration for Intraday Trading System
# =============================================

# PSX API Settings
PSX_API_ENABLED=true
PSX_API_TIMEOUT=10
PSX_API_RETRY_COUNT=3

# Premium API Keys (Optional - Get from respective providers)
# Alpha Vantage (Free tier: 5 calls/min, Premium: $49.99/month)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io (Premium: $99/month for real-time data)
POLYGON_API_KEY=your_polygon_key_here

# IEX Cloud (Basic: $9/month, Premium: $99/month)
IEX_CLOUD_API_KEY=your_iex_cloud_key_here

# Rate Limiting Configuration
API_RATE_LIMIT_PER_MINUTE=60
API_CACHE_DURATION_SECONDS=30
API_MAX_RETRIES=3

# Data Quality Settings
MAX_PRICE_CHANGE_PERCENT=10
MIN_VOLUME=0
MAX_DATA_AGE_MINUTES=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_API_CALLS=true
LOG_CACHE_HITS=true

# Performance Settings
ENABLE_CACHING=true
CACHE_SIZE_LIMIT=1000
PARALLEL_API_CALLS=false

# Fallback Settings
USE_SIMULATION_FALLBACK=true
SIMULATION_VOLATILITY=0.02